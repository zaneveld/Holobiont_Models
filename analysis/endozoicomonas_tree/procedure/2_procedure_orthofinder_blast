#Activate shell
salloc -A zaneveld -p compute-bigmem -N 1 -n 2 --mem=10G --time=2:00:00

#Activate apptainer
apptainer shell --bind /gscratch/ /gscratch/zaneveld/jesse/singularity_instances/orthofinder_stag/orthofinder_stag.sif 

#Inside apptainer, activate orthofinder stag conda env
source activate orthofinder_stag

#Run orthofinder on a single node
#orthofinder -f ../output/proteins -o ../output/orthofinder -p /tmp/

#Output all 10000+ diamond searches orthofinder needs as a text file
orthofinder -f ../output/proteins -o ../output/orthofinder -p /tmp/ -op >../output/orthofinder_diamond_commands.txt

